{
    "manifest_version": 2,

    "name": "SiteXML detector",
    "description": "This extension shows if a website is based on SiteXML architecture",
    "version": "1.0",

    "browser_action": {
        "default_icon": "sitexml_bw.png"
    },
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["bg.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],
            "js": ["sitexml.js", "content.js"]
        }
    ]
}